<h1>Add voicemail message</h1>

<fieldset>
  <legend>Upload</legend>
  <%= form_for @recording, :url => '/client/recording_add', :html => {:multipart => true} do |f| %>
    <%= hidden_field_tag :campaign_id, params[:campaign_id] %>
    <p><label for="upload_file">Name</label>
    <%= f.text_field :name %></p>
    <p>You can upload an MP3, WAV, or AIFF file.</p>
    <%= f.file_field :file %>
  <% end %>
</fieldset>

<div class="buttons">
  <button type="submit">Upload</button>
</div>
