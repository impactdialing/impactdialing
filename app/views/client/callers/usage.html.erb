<div role="main">
  <h1><%= "Usage Report" %></h1>
  <h2>for <%= @caller.identity_name %></h2>
  <%= form_tag(usage_client_caller_path(:id => params[:id]), :method => :get) do %>
    <%= select_tag 'campaign_id', options_for_select(@campaigns_data, selected: @campaign.try(:id)), prompt: 'Total' %>

    <%= render :partial => 'shared/switch_campaign' %>

    <%= render :partial => 'shared/utilization', :locals => {:report => @caller, :usage=> @caller_usage} %>

    <%= render :partial => 'shared/billable', :locals => {:usage=> @caller_usage} %>

    <%= render('shared/selective_date_range_picker', {
      datepicker_path: usage_client_caller_path,
      campaign_id: @campaign.try(:id),
      campaign: @campaign,
      caller_id: @caller.try(:id),
      caller: @caller,
      from_date: @date_range.from,
      to_date: @date_range.to
    }) %>
  <% end %>
</div>
