</head>

<body class="admin clearfix">

<header role="banner" class="clearfix">
<h1 class="<%= domain %>"><a href="<% if client_controller?(@controllerName) %>/client<% else %>/caller<% end %>"><%= title %></a></h1>

<% if logged_in_as_client? %>
  <ul class="clearfix">
    <li class='divider'><a href="/client">Help</a></li>
    <li class='divider'><a href="/client/user_add">Account</a></li>
    <!-- <li class='divider'><%= link_to "Users", client_account_path %></li> -->
    <li class='divider'><a href="<%= billing_link %>">Billing</a></li>
    <li><a href="/client/logout">Log out</a></li>
  </ul>
<% elsif logged_in_as_caller? %>
  <ul class='clearfix'>
    <li class='divider'><a href="/caller" class='divider'>Home</a></li>
    <li><a href="/caller/logout">Log out</a></li>
  </ul>
<% end %>

</header>

<% if client_controller?(@controllerName) %>
  <nav role="navigation" class="clearfix">
  <ul class="clearfix">
    <% if !logged_in_as_client? || @user.administrator? %>
      <li><a href="/client/scripts" <% if @actionName.index("script") %>class="active"<% end %>><span>Scripts</span></a></li>
      <li><a href="/client/campaigns" <% if @actionName.index("upload") || @actionName.index("campaign") %>class="active"<% end    %>><span>Campaigns</span></a></li>
      <li><a href="/client/callers" <% if @actionName.index("caller") %>class="active"<% end %>><span>Callers</span></a></li>
    <% end %>
    <li><a href="/client/monitors" <% if @actionName.index("monitor") %>class="active"<% end %>><span>Monitor</span></a></li>
    <li><a href="/client/reports" <% if @actionName.index("report") %>class="active"<% end %>><span>Reports</span></a></li>
    <li><a href="/broadcast"><span>Go to Voice Broadcasting</span></a></li>
  </ul>
  </nav>
<% end %>

<%= render :partial => "shared/client_flash_messages", :locals => {:display => [:notice, :error, :warning]} %>

<div class="content clearfix">
	<%= yield %>
 	<%= yield :sidebar %>
</div>


<footer role="contentinfo" class="clearfix">
<% if client_controller?(@controllerName) %>
  <ul>
    <% if !logged_in_as_client? || @user.administrator? %>
      <li><a href="/client/scripts" <% if @actionName.index("script") %>class="active"<% end %>><span>Scripts</span></a></li>
      <li><a href="/client/campaigns" <% if @actionName.index("upload") || @actionName.index("campaign") %>class="active"<% end %>><span>Campaigns</span></a></li>
    <li><a href="/client/callers" <% if @actionName.index("caller") %>class="active"<% end %>><span>Callers</span></a></li>
    <%end%>
    <li><a href="/client/monitor" <% if @actionName.index("monitor") %>class="active"<% end %>><span>Monitor</span></a></li>
    <li><a href="/client/reports" <% if @actionName.index("report") %>class="active"<% end %>><span>Reports</span></a></li>
  </ul>
<% end %>
<div>
  <p class="vcard">Need help? <span class="tel"><%= phone %></span> or <a href="mailto:<%= email %>"><%= email %></a></p>
</div>

<p>
<ul class="clearfix">
  <li class='divider'>&#169; 2012</li>
  <li class='divider'>
    <%= link_to "Privacy", "#{client_policies_path}#privacy" %>
  </li>
  <li>
    <%= link_to "Terms", "#{client_policies_path}#terms" %>
  </li>
</ul>
</p>

</footer>

