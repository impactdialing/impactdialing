<h1>Admin Reporting</h1>

<h3>Date range:</h3>
<%= form_tag ("/admin/report") do %>
	<%= render :partial => 'shared/date_picker' %>
	<div class="buttons">
	  <button type="submit">Update</button>
	</div>
<% end %>

<br/>
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th>Account ID</th>
    <th>Account Email</th>
    <th>Callers</th>
    <th>Calls</th>
    <th>Broadcast Calls</th>
    <th>Transfers</th>
    <th>Total</th>
  </tr>

  <% @output.each do |r| %>
    <% account=r["account"] %>
    <% calls=r["calls"] %>
    <% sessions=r["sessions"] %>
    <% transfers=r["transfers"] %>
    <% broadcast=r["broadcast"] %>
    <tr class="<%= cycle("odd","even") %>">
      <td><%= account.id %></td>
      <td><%= account.users.first.email %></td>
      <td><%= sessions %></td>
      <td><%= calls %></td>
      <td><%= broadcast %></td>
      <td><%= transfers %></td>
	  <td><%= sessions + calls + transfers %></td>
    </tr>
  <% end %>
</table>
